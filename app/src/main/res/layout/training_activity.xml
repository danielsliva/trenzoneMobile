<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/training_custom_shape"
        tools:context=".TrainingActivity">


    <TextView
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"/>
    <TextView
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:id="@+id/desc" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/diff"/>
    <TextView
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:id="@+id/rate"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textAppearance="@android:style/TextAppearance.Material.Title"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/desc" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="154dp"
            android:layout_height="24dp"
            android:id="@+id/diff"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/desc" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Ä†wiczenia"
            android:layout_width="124dp"
            android:layout_height="55dp"
            android:id="@+id/button" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            android:layout_marginEnd="130dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="131dp"/>
</android.support.constraint.ConstraintLayout>